package aula2;

public class Main {

	public static void main(String[] args) {
		// 
		System.out.println("Olá mundo! ;)");
		
		//variaveis
		int valorA = 20;
		int valorB = 10;
		int valorC;
		valorC = valorA / valorB;
		System.out.println(valorC);
		//constantes 
		
		final float PI_NUMERO = 3.14f;
		double raio = 1;
		double circoferencia;
		circoferencia = raio + (PI_NUMERO * PI_NUMERO);
		
		System.out.println(circoferencia);
		
		String nome = "matheus ";
		String texto = "A circoferencia é de: ";
		String textoTotal = nome + texto + circoferencia;
		
		System.out.println(textoTotal);
		
		// Cast
		valorC = (int)circoferencia;
		System.out.println(valorC);
		
		//Wrappers
		Long objS = 127l; 
		valorC = objS.shortValue();
		System.out.println(valorC);
		
		String s = "Bem vindo, x!";
		s = s.replace("x", "Matheus");
		s = s.toLowerCase();
		System.out.println(s);
		
	}

}
